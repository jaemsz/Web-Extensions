{

  "description": "Adds browser action icon to toolbar to scan current active tab URL.",
  "manifest_version": 2,
  "name": "vt-url-scanner",
  "version": "1.0",
  "homepage_url": "https://github.com/jaemsz/Web-Extensions/tree/main/vt-url-scanner",
  "icons": {
    "48": "icons/vt-48.jpg"
  },
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/vt-32.jpg"
  },
  
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  
  "permissions": ["tabs", "downloads", "storage", "<all_urls>"]
  
}
